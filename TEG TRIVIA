  <div class="card" id="quiz">
    <h2 id="question">Pregunta cargando...</h2>
    <div id="answers"></div>
    <div id="feedback"></div>
    <div class="score" id="score">Puntuaci√≥n: 0</div>
  </div>

  <script>
    const questions = [
      {
        question: "¬øQu√© mide el canal ADP en Platelet Mapping?",
        answers: [
          "El efecto del √°cido tranex√°mico",
          "La activaci√≥n del receptor P2Y12",
          "El nivel de fibrin√≥geno funcional",
          "La inhibici√≥n del receptor del tromboxano"
        ],
        correct: 1
      },
      {
        question: "¬øCu√°l de los siguientes es un activador del canal AA?",
        answers: [
          "Difosfato de adenosina",
          "√Åcido araquid√≥nico",
          "Kaol√≠n con heparinasa",
          "Activador F"
        ],
        correct: 1
      },
      {
        question: "¬øQu√© indica un LY30 > 3% en el TEG?",
        answers: [
          "Coagulaci√≥n acelerada",
          "Hipofibrinogenemia",
          "Hiperfibrin√≥lisis",
          "Funci√≥n plaquetaria normal"
        ],
        correct: 2
      },
      {
        question: "¬øCon qu√© hemoderivado se debe tener precauci√≥n al usar √°cido tranex√°mico?",
        answers: [
          "Plaquetas",
          "Plasma fresco congelado",
          "Concentrado de fibrin√≥geno",
          "Concentrado de complejo protromb√≠nico (CCP)"
        ],
        correct: 3
      }
    ];

    let current = 0;
    let score = 0;

    function loadQuestion() {
      const q = questions[current];
      document.getElementById("question").innerText = q.question;
      const answersDiv = document.getElementById("answers");
      answersDiv.innerHTML = "";
      document.getElementById("feedback").innerHTML = "";

      q.answers.forEach((answer, index) => {
        const btn = document.createElement("button");
        btn.innerText = answer;
        btn.onclick = () => checkAnswer(index);
        answersDiv.appendChild(btn);
      });
    }

    function checkAnswer(selected) {
      const q = questions[current];
      const feedback = document.getElementById("feedback");

      if (selected === q.correct) {
        score++;
        feedback.innerHTML = "‚úÖ <strong>¬°Correcto!</strong>";
        feedback.className = "correct";
      } else {
        feedback.innerHTML = `‚ùå <strong>Incorrecto.</strong> La respuesta correcta es: <em>${q.answers[q.correct]}</em>`;
        feedback.className = "wrong";
      }

      document.getElementById("score").innerText = `Puntuaci√≥n: ${score}`;

      setTimeout(() => {
        current++;
        if (current < questions.length) {
          loadQuestion();
        } else {
          document.getElementById("quiz").innerHTML = `
            <h2>Trivia completada üß†</h2>
            <p class='score'>Puntuaci√≥n final: ${score}/${questions.length}</p>
            <p>¬°Gracias por participar! üéâ</p>
          `;
        }
      }, 2000);
    }

    loadQuestion();
  </script>
